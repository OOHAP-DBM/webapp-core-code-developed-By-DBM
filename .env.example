VITE_APP_NAME="${APP_NAME}"

# ============================================
# OOHAPP CUSTOM SETTINGS
# ============================================

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
RAZORPAY_MODE=test

# Multi-Tenancy (Stancl)
TENANCY_DATABASE=tenant
CENTRAL_DOMAINS=localhost,127.0.0.1

# Media Library
MEDIA_DISK=public
MEDIA_MAX_FILE_SIZE=10240

# Queue Configuration
QUEUE_CONNECTION=database

# Booking & Payment Settings
BOOKING_HOLD_MINUTES=30
BOOKING_GRACE_PERIOD_DAYS=2
ADMIN_COMMISSION_PERCENTAGE=10
MAX_FUTURE_BOOKING_MONTHS=12
AUTO_APPROVAL_ENABLED=false

# DOOH Settings
DOOH_SLOT_DURATION_SECONDS=10
DOOH_MIN_BOOKING_SLOTS=6

# Notifications
NOTIFICATION_CHANNELS=database,mail
NOTIFICATION_QUEUE_ENABLED=true

# API Settings
API_RATE_LIMIT=60
API_THROTTLE_ENABLED=true

# File Upload Limits
MAX_HOARDING_IMAGES=10
MAX_POD_FILE_SIZE=20480
ALLOWED_POD_TYPES=jpg,jpeg,png,pdf,mp4

# Vendor KYC
KYC_AUTO_APPROVAL=false
KYC_DOCUMENTS_REQUIRED=pan,gst,address_proof,bank_details

# Email Notifications
MAIL_ADMIN_ADDRESS=admin@oohapp.com
MAIL_NOTIFICATIONS_ENABLED=true

# SMS Notifications (Optional - e.g., Twilio)
SMS_ENABLED=false
SMS_PROVIDER=twilio
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=

# Analytics & Tracking
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

